---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const otherLang = lang === 'es' ? 'en' : 'es';
const currentPath = Astro.url.pathname.replace(`/${lang}`, '');
---

<header class="bg-white shadow-sm sticky top-0 z-50 border-b border-gray-100">
  <nav class="container-custom py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href={`/${lang}`} class="flex items-center space-x-2 group">
        <div class="w-10 h-10 bg-red-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
          <span class="text-white font-bold text-xl">T</span>
        </div>
        <span class="text-2xl font-bold text-red-600">Talentum</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a
          href={`/${lang}#home`}
          class="text-gray-700 hover:text-red-600 transition-colors duration-300 font-medium relative group"
        >
          {t('nav.home')}
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-red-600 group-hover:w-full transition-all duration-300"></span>
        </a>
        <a
          href={`/${lang}#services`}
          class="text-gray-700 hover:text-red-600 transition-colors duration-300 font-medium relative group"
        >
          {t('nav.services')}
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-red-600 group-hover:w-full transition-all duration-300"></span>
        </a>
        <a
          href={`/${lang}#about`}
          class="text-gray-700 hover:text-red-600 transition-colors duration-300 font-medium relative group"
        >
          {t('nav.about')}
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-red-600 group-hover:w-full transition-all duration-300"></span>
        </a>
        <a
          href={`/${lang}/blog`}
          class="text-gray-700 hover:text-red-600 transition-colors duration-300 font-medium relative group"
        >
          {t('footer.blog')}
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-red-600 group-hover:w-full transition-all duration-300"></span>
        </a>
        <a
          href={`/${lang}#contact`}
          class="px-6 py-2.5 bg-red-600 text-white rounded-lg hover:bg-red-700 hover:shadow-lg hover:scale-105 transition-all duration-300 font-semibold"
        >
          {t('nav.contact')}
        </a>

        <!-- Language Switcher -->
        <a
          href={`/${otherLang}${currentPath}`}
          class="flex items-center gap-2 px-4 py-2 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors duration-300 font-medium text-gray-700"
        >
          {otherLang === 'es' ? 'ðŸ‡²ðŸ‡½' : 'ðŸ‡ºðŸ‡¸'}
          <span>{otherLang.toUpperCase()}</span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-gray-700 p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 space-y-4 pb-4">
      <a href={`/${lang}#home`} class="block text-gray-700 hover:text-red-600 transition-colors duration-300 font-medium py-2">
        {t('nav.home')}
      </a>
      <a href={`/${lang}#services`} class="block text-gray-700 hover:text-red-600 transition-colors duration-300 font-medium py-2">
        {t('nav.services')}
      </a>
      <a href={`/${lang}#about`} class="block text-gray-700 hover:text-red-600 transition-colors duration-300 font-medium py-2">
        {t('nav.about')}
      </a>
      <a href={`/${lang}/blog`} class="block text-gray-700 hover:text-red-600 transition-colors duration-300 font-medium py-2">
        {t('footer.blog')}
      </a>
      <a href={`/${lang}#contact`} class="block px-6 py-2.5 bg-red-600 text-white rounded-lg text-center font-semibold hover:bg-red-700">
        {t('nav.contact')}
      </a>
      <a
        href={`/${otherLang}${currentPath}`}
        class="flex items-center justify-center gap-2 px-4 py-2 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors font-medium text-gray-700"
      >
        {otherLang === 'es' ? 'ðŸ‡²ðŸ‡½' : 'ðŸ‡ºðŸ‡¸'}
        <span>{otherLang.toUpperCase()}</span>
      </a>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
