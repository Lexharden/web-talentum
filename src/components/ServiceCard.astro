---
interface Props {
  icon: string;
  title: string;
  description: string;
  index?: number;
}

const { icon, title, description, index = 0 } = Astro.props;
---

<div
  class="group relative bg-white p-8 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 fade-in-up border border-gray-200"
  style={`animation-delay: ${index * 0.1}s`}
>
  <!-- Barra superior roja -->
  <div class="absolute top-0 left-0 w-full h-1 bg-brand-primary transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left rounded-t-xl"></div>

  <!-- Icono -->
  <div class="mb-6">
    <div class="w-14 h-14 bg-red-50 rounded-lg flex items-center justify-center text-3xl text-brand-primary">
      <span role="img" aria-label={title}>{icon}</span>
    </div>
  </div>

  <!-- Contenido -->
  <h3 class="text-xl font-bold text-gray-900 mb-3">
    {title}
  </h3>
  <p class="text-gray-600 leading-relaxed">
    {description}
  </p>
</div>
