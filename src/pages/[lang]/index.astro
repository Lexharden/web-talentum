---
import Layout from '../../layouts/Layout.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import ContactForm from '../../components/ContactForm.astro';
import Stats from '../../components/Stats.astro';
import Testimonials from '../../components/Testimonials.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { languages } from '../../i18n';
import { services } from '../../lib/services';
import { getCollection } from 'astro:content';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Obtener posts del blog
const allBlogPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true && data.lang === lang;
});

// Ordenar por fecha y tomar los 3 más recientes
const recentPosts = allBlogPosts
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .slice(0, 3);

// Formatear fecha
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat(lang === 'es' ? 'es-MX' : 'en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};
---

<Layout
  title={`Talentum - ${t('hero.subtitle')} | ${t('hero.title')}`}
  description={t('hero.description')}
  lang={lang}
  keywords={lang === 'es'
    ? 'talentum recursos humanos, reclutamiento ejecutivo México, headhunting empresarial, selección de personal certificada, pruebas psicométricas profesionales, evaluaciones psicométricas, estudios socioeconómicos laborales, pruebas de polígrafo empresarial, consultoría desarrollo organizacional, gestión talento humano'
    : 'talentum human resources, executive recruitment Mexico, corporate headhunting, certified personnel selection, professional psychometric tests, psychometric assessments, labor socioeconomic studies, corporate polygraph testing, organizational development consulting, human talent management'
  }
>
  <!-- Hero Section -->
  <section id="home" class="relative min-h-screen flex items-center overflow-hidden gradient-secondary">
    <!-- Geometric Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background: linear-gradient(135deg, var(--color-brand-primary) 0%, transparent 100%);"></div>
      <div class="absolute top-0 left-0 w-full h-full" style="background-image: radial-gradient(circle at 25% 25%, var(--color-brand-primary) 0%, transparent 50%), radial-gradient(circle at 75% 75%, var(--color-brand-primary) 0%, transparent 50%);"></div>
    </div>

    <div class="container-custom relative z-10">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Left Content -->
          <div>
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 fade-in-up leading-tight text-inverse">
              {t('hero.title')}
              <span class="block gradient-text" style="color: var(--color-brand-primary); background: linear-gradient(135deg, var(--color-brand-primary) 0%, var(--color-brand-primary-light) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">{t('hero.title.career')}</span>
            </h1>
            <h2 class="text-2xl md:text-3xl mb-4 fade-in-up font-normal text-inverse opacity-90" style="animation-delay: 0.2s">
              {t('hero.subtitle')}
            </h2>
            <p class="text-lg md:text-xl mb-10 max-w-2xl fade-in-up text-inverse opacity-80" style="animation-delay: 0.3s">
              {t('hero.description')}
            </p>

            <div class="flex flex-col sm:flex-row gap-4 fade-in-up" style="animation-delay: 0.4s">
              <a
                href="#contact"
                class="btn-primary text-center"
                aria-label={t('hero.cta')}
              >
                {t('hero.cta')}
              </a>
              <a
                href="#services"
                class="px-8 py-4 bg-transparent border-2 rounded-lg font-semibold transition-all duration-300 text-center text-inverse hover:bg-white hover:text-primary"
                style="border-color: var(--color-text-inverse);"
                aria-label={t('hero.cta.secondary')}
              >
                {t('hero.cta.secondary')}
              </a>
            </div>
          </div>

          <!-- Right Content - Video de Presentación -->
          <div class="relative fade-in-up" style="animation-delay: 0.5s">
            <div class="relative rounded-2xl overflow-hidden shadow-2xl bg-black group">
              <video
                id="presentation-video"
                class="w-full h-full aspect-video object-cover"
                poster="/videos/thumbnail.jpg"
                controls
                preload="metadata"
              >
                <source src="/videos/presentacion.mp4" type="video/mp4" />
                <source src="/videos/presentacion.webm" type="video/webm" />
                {lang === 'es'
                  ? 'Tu navegador no soporta el elemento de video.'
                  : 'Your browser does not support the video tag.'}
              </video>

              <!-- Play button overlay (opcional) -->
              <div class="absolute inset-0 flex items-center justify-center bg-black/30 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none">
                <div class="w-20 h-20 bg-red-600/90 rounded-full flex items-center justify-center">
                  <svg class="w-10 h-10 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 floating" aria-hidden="true">
      <svg class="w-6 h-6 text-inverse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Stats Section -->
  <Stats />

  <!-- Services Section -->
  <section id="services" class="section-padding bg-surface-secondary">
    <div class="container-custom">
      <div class="text-center mb-16 fade-in-up">
        <span class="text-brand-primary font-semibold text-sm uppercase tracking-wider mb-2 block">NUESTROS SERVICIOS</span>
        <h2 class="text-4xl md:text-5xl font-bold text-primary mb-4">
          {t('services.title')}
        </h2>
        <p class="text-xl text-secondary max-w-3xl mx-auto">
          {t('services.subtitle')}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service, index) => (
          <ServiceCard
            icon={service.icon}
            title={t(service.titleKey as any)}
            description={t(service.descriptionKey as any)}
            index={index}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Target Audience Section -->
  <section class="section-padding bg-surface-primary">
    <div class="container-custom">
      <div class="text-center mb-12 fade-in-up">
        <span class="text-brand-primary font-semibold text-sm uppercase tracking-wider mb-2 block">SOLUCIONES</span>
        <h2 class="text-4xl md:text-5xl font-bold text-primary mb-4">{t('category.title')}</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- Para Profesionales -->
        <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 fade-in-up border border-gray-200">
          <div class="w-14 h-14 bg-red-600 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">{t('category.workers.title')}</h3>
          <p class="text-gray-600 mb-6 leading-relaxed">{t('category.workers.description')}</p>
          <a href="#contact" class="inline-flex items-center px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors duration-300">
            {t('category.workers.cta')}
          </a>
        </div>

        <!-- Para Empresas -->
        <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 fade-in-up border border-gray-200" style="animation-delay: 0.2s">
          <div class="w-14 h-14 bg-gray-900 rounded-lg flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">{t('category.business.title')}</h3>
          <p class="text-gray-600 mb-6 leading-relaxed">{t('category.business.description')}</p>
          <a href="#contact" class="inline-flex items-center px-6 py-3 bg-gray-900 text-white font-semibold rounded-lg hover:bg-gray-800 transition-colors duration-300">
            {t('category.business.cta')}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="section-padding bg-surface-secondary">
    <div class="container-custom">
      <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-16 fade-in-up">
          <span class="text-brand-primary font-semibold text-sm uppercase tracking-wider mb-2 block">NOSOTROS</span>
          <h2 class="text-4xl md:text-5xl font-bold text-primary mb-4">
            {t('about.title')}
          </h2>
          <p class="text-xl text-secondary">
            {t('about.subtitle')}
          </p>
        </div>

        <!-- Mission & Vision -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
          <div class="card-elevated p-8 rounded-xl overflow-hidden fade-in-up">
            <div class="relative">
              <div class="w-12 h-12 bg-brand-primary rounded-lg flex items-center justify-center mb-4 shadow-md">
                <svg class="w-6 h-6 text-inverse" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-primary mb-4">{t('about.mission.title')}</h3>
              <p class="text-secondary leading-relaxed">{t('about.mission.description')}</p>
            </div>
          </div>

          <div class="card-elevated p-8 rounded-xl overflow-hidden fade-in-up" style="animation-delay: 0.1s">
            <div class="relative">
              <div class="w-12 h-12 rounded-lg flex items-center justify-center mb-4 shadow-md" style="background-color: var(--color-brand-secondary);">
                <svg class="w-6 h-6 text-inverse" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-primary mb-4">{t('about.vision.title')}</h3>
              <p class="text-secondary leading-relaxed">{t('about.vision.description')}</p>
            </div>
          </div>
        </div>

        <!-- Values -->
        <div class="card-elevated p-8 md:p-12 rounded-xl fade-in-up">
          <h3 class="text-3xl font-bold text-primary mb-8 text-center">{t('about.values.title')}</h3>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            {[
              { key: 'integrity', icon: '🛡️' },
              { key: 'excellence', icon: '⭐' },
              { key: 'innovation', icon: '💡' },
              { key: 'commitment', icon: '🤝' }
            ].map((value, index) => (
              <div class="text-center fade-in-up" style={`animation-delay: ${index * 0.1}s`}>
                <div class="text-4xl mb-3" role="img" aria-label={t(`about.values.${value.key}` as any)}>{value.icon}</div>
                <div class="font-bold text-primary">{t(`about.values.${value.key}` as any)}</div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Industries Section -->
  <section class="section-padding bg-surface-primary">
    <div class="container-custom">
      <div class="text-center mb-16 fade-in-up">
        <span class="text-brand-primary font-semibold text-sm uppercase tracking-wider mb-2 block">SECTORES</span>
        <h2 class="text-4xl md:text-5xl font-bold text-primary mb-4">{t('industries.title')}</h2>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {[
          { nameKey: 'industries.hotel', icon: '🏨' },
          { nameKey: 'industries.hospitality', icon: '🍽️' },
          { nameKey: 'industries.kitchen', icon: '👨‍🍳' },
          { nameKey: 'industries.retail', icon: '🛍️' },
          { nameKey: 'industries.events', icon: '🎉' },
          { nameKey: 'industries.labor', icon: '👷‍♂️' },
          { nameKey: 'industries.driving', icon: '🚗' },
          { nameKey: 'industries.senior', icon: '👴' }
        ].map((industry, index) => (
          <div class="bg-surface-secondary p-6 rounded-xl text-center card-hover fade-in-up" style={`animation-delay: ${index * 0.1}s`}>
            <div class="text-4xl mb-3" role="img" aria-label={t(industry.nameKey as any)}>{industry.icon}</div>
            <h3 class="text-lg font-bold text-primary mb-2">{t(industry.nameKey as any)}</h3>
          </div>
        ))}
      </div>

      <div class="text-center mt-12 fade-in-up">
        <button class="btn-primary" aria-label={t('industries.view')}>
          {t('industries.view')}
        </button>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-16 fade-in-up">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-8">{t('process.title')}</h2>

        <div class="flex justify-center space-x-4 mb-12">
          <button class="px-6 py-2 bg-red-600 text-white font-semibold rounded-lg">
            {t('process.business')}
          </button>
          <button class="px-6 py-2 bg-white text-gray-600 font-semibold rounded-lg border border-gray-300">
            {t('process.talents')}
          </button>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {[
          {
            number: '1',
            titleKey: 'process.step1.title',
            descriptionKey: 'process.step1.description'
          },
          {
            number: '2',
            titleKey: 'process.step2.title',
            descriptionKey: 'process.step2.description'
          },
          {
            number: '3',
            titleKey: 'process.step3.title',
            descriptionKey: 'process.step3.description'
          }
        ].map((step, index) => (
          <div class="text-center fade-in-up" style={`animation-delay: ${index * 0.2}s`}>
            <div class="w-16 h-16 bg-red-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-6">
              {step.number}
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">{t(step.titleKey as any)}</h3>
            <p class="text-gray-600">{t(step.descriptionKey as any)}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Blog Section -->
  {recentPosts.length > 0 && (
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="text-center mb-12 fade-in-up">
          <span class="text-red-600 font-semibold text-sm uppercase tracking-wider mb-2 block">
            {lang === 'es' ? 'NUESTRO BLOG' : 'OUR BLOG'}
          </span>
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
            {t('blog.title')}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {t('blog.description')}
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 mb-12">
          {recentPosts.map((post, index) => (
            <article class="group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden fade-in-up" style={`animation-delay: ${index * 0.1}s`}>
              <a href={`/${lang}/blog/${post.slug}`} class="block">
                {post.data.image && (
                  <div class="aspect-video overflow-hidden">
                    <img
                      src={post.data.image.src}
                      alt={post.data.image.alt}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="p-6">
                  <div class="flex items-center gap-2 mb-3">
                    <span class="inline-block px-3 py-1 bg-red-50 text-red-600 text-xs font-semibold rounded-full uppercase tracking-wide">
                      {post.data.category}
                    </span>
                    {post.data.featured && (
                      <span class="inline-block px-3 py-1 bg-yellow-50 text-yellow-600 text-xs font-semibold rounded-full uppercase tracking-wide">
                        {lang === 'es' ? 'Destacado' : 'Featured'}
                      </span>
                    )}
                  </div>
                  <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-red-600 transition-colors line-clamp-2">
                    {post.data.title}
                  </h3>
                  <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                    {post.data.description}
                  </p>
                  <div class="flex items-center justify-between text-xs text-gray-500">
                    <span>{formatDate(post.data.publishDate)}</span>
                    {post.data.readingTime && (
                      <span>{post.data.readingTime} {lang === 'es' ? 'min' : 'min'}</span>
                    )}
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>

        <div class="text-center fade-in-up">
          <a href={`/${lang}/blog`} class="btn-primary inline-block">
            {lang === 'es' ? 'Ver Todos los Artículos' : 'View All Articles'}
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Contact Section -->
  <section id="contact" class="section-padding bg-black text-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12 fade-in-up">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">
            {t('newsletter.title')}
          </h2>
          <p class="text-xl text-gray-300">
            {t('newsletter.description')}
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
          <!-- Newsletter Form -->
          <div class="fade-in-up">
            <div class="bg-white/10 p-8 rounded-xl border border-gray-700">
              <form class="space-y-4">
                <div>
                  <input 
                    type="email" 
                    placeholder={t('newsletter.placeholder')}
                    class="w-full px-4 py-3 bg-white/5 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-red-600"
                  />
                </div>
                <button 
                  type="submit"
                  class="w-full px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors duration-300"
                >
                  {t('newsletter.button')}
                </button>
              </form>
              <p class="text-gray-400 text-sm mt-4">{t('newsletter.unsubscribe')}</p>
            </div>
          </div>

          <!-- Contact Info -->
          <div class="fade-in-up" style="animation-delay: 0.2s">
            <div class="space-y-6">
              <div>
                <h3 class="text-2xl font-bold mb-4">{t('contact.title')}</h3>
                <p class="text-gray-300 leading-relaxed">
                  {t('newsletter.tagline')}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  
</Layout>

<style>
  @keyframes blob {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    25% {
      transform: translate(20px, -50px) scale(1.1);
    }
    50% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    75% {
      transform: translate(50px, 50px) scale(1.05);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
