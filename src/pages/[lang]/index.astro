---
import Layout from '../../layouts/Layout.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import ContactForm from '../../components/ContactForm.astro';
import Stats from '../../components/Stats.astro';
import Testimonials from '../../components/Testimonials.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { languages } from '../../i18n';
import { services } from '../../lib/services';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={`GH360 - ${t('hero.title')}`}
  description={t('hero.description')}
  lang={lang}
  keywords={lang === 'es'
    ? 'reclutamiento empresas, selección personal, pruebas psicométricas, estudios socioeconómicos, pruebas polígrafo, consultoría recursos humanos, headhunting México, reclutamiento ejecutivo'
    : 'corporate recruitment, personnel selection, psychometric tests, socioeconomic studies, polygraph tests, HR consulting, headhunting, executive recruitment'
  }
>
  <!-- Hero Section -->
  <section id="home" class="relative min-h-screen flex items-center overflow-hidden bg-gradient-to-br from-gray-900 via-black to-gray-800">
    <!-- Geometric Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-gradient-to-r from-red-600/20 to-transparent"></div>
      <div class="absolute top-0 left-0 w-full h-full" style="background-image: radial-gradient(circle at 25% 25%, #DC2626 0%, transparent 50%), radial-gradient(circle at 75% 75%, #DC2626 0%, transparent 50%);"></div>
    </div>

    <div class="container-custom relative z-10">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Left Content -->
          <div class="text-white">
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 fade-in-up leading-tight">
              {t('hero.title')}
              <span class="text-red-500 block">{t('hero.title.career')}</span>
            </h1>
            <h2 class="text-2xl md:text-3xl mb-4 text-gray-300 fade-in-up font-normal" style="animation-delay: 0.2s">
              {t('hero.subtitle')}
            </h2>
            <p class="text-lg md:text-xl mb-10 text-gray-400 max-w-2xl fade-in-up" style="animation-delay: 0.3s">
              {t('hero.description')}
            </p>

            <div class="flex flex-col sm:flex-row gap-4 fade-in-up" style="animation-delay: 0.4s">
              <a
                href="#contact"
                class="px-8 py-4 bg-red-600 text-white rounded-lg font-bold hover:bg-red-700 hover:shadow-2xl hover:scale-105 transition-all duration-300 text-center"
              >
                {t('hero.cta')}
              </a>
              <a
                href="#services"
                class="px-8 py-4 bg-transparent text-white border-2 border-white rounded-lg font-bold hover:bg-white hover:text-black transition-all duration-300 text-center"
              >
                {t('hero.cta.secondary')}
              </a>
            </div>
          </div>

          <!-- Right Content - Video/Image Placeholder -->
          <div class="relative fade-in-up" style="animation-delay: 0.5s">
            <div class="relative bg-gradient-to-br from-red-600 to-red-800 rounded-2xl p-8 text-center aspect-video flex items-center justify-center">
              <div class="text-white">
                <div class="w-16 h-16 mx-auto mb-4 bg-white/20 rounded-full flex items-center justify-center">
                  <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                </div>
                <p class="text-lg font-semibold">{t('hero.video')}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 floating">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Stats Section -->
  <Stats />

  <!-- Services Section -->
  <section id="services" class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-16 fade-in-up">
        <span class="text-red-600 font-semibold text-sm uppercase tracking-wider mb-2 block">WHY US</span>
        <h2 class="text-4xl md:text-5xl font-bold text-black mb-4">
          {t('services.title')}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {t('services.subtitle')}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service, index) => (
          <ServiceCard
            icon={service.icon}
            title={t(service.titleKey as any)}
            description={t(service.descriptionKey as any)}
            index={index}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Target Audience Section -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="text-center mb-12 fade-in-up">
        <span class="text-red-600 font-semibold text-sm uppercase tracking-wider mb-2 block">CATEGORY</span>
        <h2 class="text-4xl md:text-5xl font-bold text-black mb-4">{t('category.title')}</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- For Workers -->
        <div class="bg-gradient-to-br from-gray-50 to-gray-100 p-8 rounded-2xl fade-in-up">
          <div class="mb-6">
            <div class="w-16 h-16 bg-red-600 rounded-full flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-black mb-4">{t('category.workers.title')}</h3>
            <p class="text-gray-600 mb-6">{t('category.workers.description')}</p>
            <a href="#contact" class="inline-flex items-center px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors duration-300">
              {t('category.workers.cta')}
            </a>
          </div>
        </div>

        <!-- For Business -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 p-8 rounded-2xl fade-in-up" style="animation-delay: 0.2s">
          <div class="mb-6">
            <div class="w-16 h-16 bg-black rounded-full flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-black mb-4">{t('category.business.title')}</h3>
            <p class="text-gray-600 mb-6">{t('category.business.description')}</p>
            <a href="#contact" class="inline-flex items-center px-6 py-3 bg-black text-white font-semibold rounded-lg hover:bg-gray-800 transition-colors duration-300">
              {t('category.business.cta')}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-16 fade-in-up">
          <span class="text-red-600 font-semibold text-sm uppercase tracking-wider mb-2 block">ABOUT US</span>
          <h2 class="text-4xl md:text-5xl font-bold text-black mb-4">
            {t('about.title')}
          </h2>
          <p class="text-xl text-gray-600">
            {t('about.subtitle')}
          </p>
        </div>

        <!-- Mission & Vision -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
          <div class="relative p-8 rounded-xl overflow-hidden bg-white border border-gray-200 card-hover fade-in-up">
            <div class="relative">
              <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-black mb-4">{t('about.mission.title')}</h3>
              <p class="text-gray-700 leading-relaxed">{t('about.mission.description')}</p>
            </div>
          </div>

          <div class="relative p-8 rounded-xl overflow-hidden bg-white border border-gray-200 card-hover fade-in-up" style="animation-delay: 0.1s">
            <div class="relative">
              <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-black mb-4">{t('about.vision.title')}</h3>
              <p class="text-gray-700 leading-relaxed">{t('about.vision.description')}</p>
            </div>
          </div>
        </div>

        <!-- Values -->
        <div class="bg-white p-8 md:p-12 rounded-xl shadow-lg border border-gray-200 fade-in-up">
          <h3 class="text-3xl font-bold text-black mb-8 text-center">{t('about.values.title')}</h3>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            {[
              { key: 'integrity', icon: '🛡️' },
              { key: 'excellence', icon: '⭐' },
              { key: 'innovation', icon: '💡' },
              { key: 'commitment', icon: '🤝' }
            ].map((value, index) => (
              <div class="text-center fade-in-up" style={`animation-delay: ${index * 0.1}s`}>
                <div class="text-4xl mb-3">{value.icon}</div>
                <div class="font-bold text-black">{t(`about.values.${value.key}` as any)}</div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Industries Section -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="text-center mb-16 fade-in-up">
        <span class="text-red-600 font-semibold text-sm uppercase tracking-wider mb-2 block">INDUSTRIES</span>
        <h2 class="text-4xl md:text-5xl font-bold text-black mb-4">Industries Served</h2>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {[
          { name: 'Hotel', count: '2853', icon: '🏨' },
          { name: 'Hospitality', count: '2256', icon: '🍽️' },
          { name: 'Kitchen', count: '1408', icon: '👨‍🍳' },
          { name: 'Retail', count: '1740', icon: '🛍️' },
          { name: 'Special Events', count: '3948', icon: '🎉' },
          { name: 'General Labor', count: '2984', icon: '👷‍♂️' },
          { name: 'Driving', count: '4509', icon: '🚗' },
          { name: 'Senior Living', count: '1039', icon: '👴' }
        ].map((industry, index) => (
          <div class="bg-gray-50 p-6 rounded-xl text-center card-hover fade-in-up" style={`animation-delay: ${index * 0.1}s`}>
            <div class="text-4xl mb-3">{industry.icon}</div>
            <h3 class="text-lg font-bold text-black mb-2">{industry.name}</h3>
            <p class="text-red-600 font-semibold">{industry.count} Staffs</p>
          </div>
        ))}
      </div>

      <div class="text-center mt-12 fade-in-up">
        <button class="px-8 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors duration-300">
          View All Categories
        </button>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-16 fade-in-up">
        <span class="text-red-600 font-semibold text-sm uppercase tracking-wider mb-2 block">PROCESS</span>
        <h2 class="text-4xl md:text-5xl font-bold text-black mb-8">How It Works?</h2>
        
        <!-- Tab Navigation -->
        <div class="flex justify-center space-x-8 mb-12">
          <button class="text-red-600 font-semibold border-b-2 border-red-600 pb-2">For Talents</button>
          <button class="text-gray-600 font-semibold pb-2 hover:text-red-600 transition-colors">For Business</button>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {[
          {
            number: '1',
            title: 'Sign up, It\'s Free!',
            description: 'Our team will set up your account and help you build job to easy-to-use web dashboard.'
          },
          {
            number: '2',
            title: 'Post jobs in minutes',
            description: 'Create and post anywhere from 1-100 job openings with just a few clicks. customize your own.'
          },
          {
            number: '3',
            title: 'Review Your Staff',
            description: 'View bios, reviews, and rosters before workers arrive on the job, and post reviews and pay, effortlessly.'
          }
        ].map((step, index) => (
          <div class="text-center fade-in-up" style={`animation-delay: ${index * 0.2}s`}>
            <div class="w-16 h-16 bg-red-600 text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-6">
              {step.number}
            </div>
            <h3 class="text-xl font-bold text-black mb-4">{step.title}</h3>
            <p class="text-gray-600">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <Testimonials />

  <!-- Latest News Section -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-16 fade-in-up">
        <span class="text-red-600 font-semibold text-sm uppercase tracking-wider mb-2 block">MEDIA</span>
        <h2 class="text-4xl md:text-5xl font-bold text-black mb-4">Latest News</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {[
          {
            title: 'Create a series of blog posts discussing common interview',
            image: 'bg-red-100',
            date: '2024-10-01'
          },
          {
            title: 'Explore the concept of personal branding and its impact on',
            image: 'bg-gray-100',
            date: '2024-09-28'
          },
          {
            title: 'Feature interviews with employees from top companies',
            image: 'bg-black',
            date: '2024-09-25'
          }
        ].map((article, index) => (
          <div class="bg-white rounded-xl shadow-md card-hover overflow-hidden fade-in-up" style={`animation-delay: ${index * 0.1}s`}>
            <div class={`h-48 ${article.image} flex items-center justify-center`}>
              <div class="text-4xl">📰</div>
            </div>
            <div class="p-6">
              <h3 class="text-lg font-bold text-black mb-3 line-clamp-2">{article.title}</h3>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-500">{article.date}</span>
                <a href="#" class="text-red-600 font-semibold hover:text-red-700">Read More</a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="section-padding bg-black text-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12 fade-in-up">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">
            {t('newsletter.title')}
          </h2>
          <p class="text-xl text-gray-300">
            {t('newsletter.description')}
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
          <!-- Newsletter Form -->
          <div class="fade-in-up">
            <div class="bg-white/10 p-8 rounded-xl border border-gray-700">
              <form class="space-y-4">
                <div>
                  <input 
                    type="email" 
                    placeholder={t('newsletter.placeholder')}
                    class="w-full px-4 py-3 bg-white/5 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-red-600"
                  />
                </div>
                <button 
                  type="submit"
                  class="w-full px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors duration-300"
                >
                  {t('newsletter.button')}
                </button>
              </form>
              <p class="text-gray-400 text-sm mt-4">{t('newsletter.unsubscribe')}</p>
            </div>
          </div>

          <!-- Contact Info -->
          <div class="fade-in-up" style="animation-delay: 0.2s">
            <div class="space-y-6">
              <div>
                <h3 class="text-2xl font-bold mb-4">{t('contact.title')}</h3>
                <p class="text-gray-300 leading-relaxed">
                  {t('newsletter.tagline')}
                </p>
              </div>

              <!-- App Download Buttons -->
              <div class="flex flex-col sm:flex-row gap-4">
                <button class="flex items-center gap-3 px-4 py-3 bg-white/10 border border-gray-600 rounded-lg hover:bg-white/20 transition-colors duration-300">
                  <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                  </svg>
                  <div class="text-left">
                    <div class="text-xs text-gray-400">Download on</div>
                    <div class="font-semibold">App Store</div>
                  </div>
                </button>
                
                <button class="flex items-center gap-3 px-4 py-3 bg-white/10 border border-gray-600 rounded-lg hover:bg-white/20 transition-colors duration-300">
                  <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.61 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
                  </svg>
                  <div class="text-left">
                    <div class="text-xs text-gray-400">Get it on</div>
                    <div class="font-semibold">Google Play</div>
                  </div>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes blob {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    25% {
      transform: translate(20px, -50px) scale(1.1);
    }
    50% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    75% {
      transform: translate(50px, 50px) scale(1.05);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>
