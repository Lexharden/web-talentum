---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../../i18n/utils';
import { languages } from '../../../i18n';

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Obtener todos los posts del blog que no sean drafts y coincidan con el idioma
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true && data.lang === lang;
});

// Ordenar por fecha de publicación (más reciente primero)
const sortedPosts = allPosts.sort(
  (a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime()
);

// Obtener parámetros de búsqueda
const urlParams = new URL(Astro.request.url).searchParams;
const selectedCategory = urlParams.get('category');
const selectedTag = urlParams.get('tag');

// Filtrar posts
let filteredPosts = sortedPosts;

if (selectedCategory) {
  filteredPosts = filteredPosts.filter(
    (post) => post.data.category === selectedCategory
  );
}

if (selectedTag) {
  filteredPosts = filteredPosts.filter((post) =>
    post.data.tags.includes(selectedTag)
  );
}

// Obtener categorías únicas
const categories = [
  'reclutamiento',
  'recursos-humanos',
  'psicometria',
  'desarrollo-organizacional',
  'tendencias',
  'consejos',
  'casos-exito',
];

// Posts destacados (featured)
const featuredPosts = sortedPosts.filter((post) => post.data.featured).slice(0, 3);

// Calcular tiempo de lectura
const calculateReadingTime = (content: string) => {
  const wordsPerMinute = 200;
  const words = content.trim().split(/\s+/).length;
  return Math.ceil(words / wordsPerMinute);
};

// Formatear fecha
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat(lang === 'es' ? 'es-MX' : 'en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};
---

<Layout
  title={`${t('blog.title')} | Talentum`}
  description={t('blog.description')}
  lang={lang}
>
  <main class="min-h-screen bg-white">
    <!-- Hero del Blog -->
    <section class="bg-gradient-to-b from-gray-900 to-gray-800 text-white pt-24 pb-16">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto text-center fade-in-up">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            {t('blog.title')}
          </h1>
          <p class="text-xl text-gray-300 leading-relaxed">
            {t('blog.description')}
          </p>
        </div>
      </div>
    </section>

    <!-- Posts Destacados -->
    {featuredPosts.length > 0 && !selectedCategory && !selectedTag && (
      <section class="section-padding bg-gray-50">
        <div class="container-custom">
          <h2 class="text-3xl font-bold text-gray-900 mb-8">
            {lang === 'es' ? 'Artículos Destacados' : 'Featured Posts'}
          </h2>
          <div class="grid md:grid-cols-3 gap-8">
            {featuredPosts.map((post) => (
              <a
                href={`/${lang}/blog/${post.slug}`}
                class="group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden"
              >
                {post.data.image && (
                  <div class="aspect-video overflow-hidden">
                    <img
                      src={post.data.image.src}
                      alt={post.data.image.alt}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="p-6">
                  <span class="inline-block px-3 py-1 bg-red-50 text-red-600 text-xs font-semibold rounded-full uppercase tracking-wide mb-3">
                    {post.data.category}
                  </span>
                  <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-red-600 transition-colors">
                    {post.data.title}
                  </h3>
                  <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                    {post.data.description}
                  </p>
                  <div class="flex items-center gap-4 text-xs text-gray-500">
                    <span>{formatDate(post.data.publishDate)}</span>
                    {post.data.readingTime && (
                      <span>• {post.data.readingTime} min</span>
                    )}
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Filtros y Lista de Posts -->
    <section class="section-padding">
      <div class="container-custom">
        <div class="lg:grid lg:grid-cols-12 lg:gap-12">
          <!-- Sidebar de filtros -->
          <aside class="lg:col-span-3 mb-8 lg:mb-0">
            <div class="sticky top-24">
              <h3 class="text-lg font-bold text-gray-900 mb-4">
                {lang === 'es' ? 'Categorías' : 'Categories'}
              </h3>
              <div class="space-y-2">
                <a
                  href={`/${lang}/blog`}
                  class={`block px-4 py-2 rounded-lg transition-colors ${
                    !selectedCategory
                      ? 'bg-red-600 text-white'
                      : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                  }`}
                >
                  {lang === 'es' ? 'Todas' : 'All'}
                </a>
                {categories.map((category) => {
                  const count = sortedPosts.filter(
                    (post) => post.data.category === category
                  ).length;
                  return (
                    <a
                      href={`/${lang}/blog?category=${category}`}
                      class={`block px-4 py-2 rounded-lg transition-colors capitalize ${
                        selectedCategory === category
                          ? 'bg-red-600 text-white'
                          : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                      }`}
                    >
                      <span class="flex items-center justify-between">
                        <span>{category.replace(/-/g, ' ')}</span>
                        <span class="text-sm opacity-75">({count})</span>
                      </span>
                    </a>
                  );
                })}
              </div>

              {selectedCategory && (
                <a
                  href={`/${lang}/blog`}
                  class="mt-4 inline-block text-sm text-red-600 hover:underline"
                >
                  {lang === 'es' ? '← Limpiar filtros' : '← Clear filters'}
                </a>
              )}
            </div>
          </aside>

          <!-- Lista de posts -->
          <div class="lg:col-span-9">
            {filteredPosts.length === 0 ? (
              <div class="text-center py-12">
                <p class="text-gray-600 text-lg">
                  {lang === 'es'
                    ? 'No se encontraron artículos en esta categoría.'
                    : 'No posts found in this category.'}
                </p>
              </div>
            ) : (
              <div class="space-y-8">
                {filteredPosts.map((post) => (
                  <article class="group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden">
                    <a href={`/${lang}/blog/${post.slug}`} class="lg:flex">
                      {post.data.image && (
                        <div class="lg:w-80 lg:flex-shrink-0">
                          <div class="aspect-video lg:aspect-square overflow-hidden">
                            <img
                              src={post.data.image.src}
                              alt={post.data.image.alt}
                              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                              loading="lazy"
                            />
                          </div>
                        </div>
                      )}
                      <div class="p-6 lg:p-8 flex flex-col justify-between flex-1">
                        <div>
                          <div class="flex items-center gap-3 mb-3">
                            <span class="inline-block px-3 py-1 bg-red-50 text-red-600 text-xs font-semibold rounded-full uppercase tracking-wide">
                              {post.data.category}
                            </span>
                            {post.data.featured && (
                              <span class="inline-block px-3 py-1 bg-yellow-50 text-yellow-600 text-xs font-semibold rounded-full uppercase tracking-wide">
                                {lang === 'es' ? 'Destacado' : 'Featured'}
                              </span>
                            )}
                          </div>
                          <h2 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-red-600 transition-colors">
                            {post.data.title}
                          </h2>
                          <p class="text-gray-600 mb-4 line-clamp-2">
                            {post.data.description}
                          </p>
                        </div>
                        <div class="flex items-center justify-between">
                          <div class="flex items-center gap-4 text-sm text-gray-500">
                            <span class="font-medium">{post.data.author}</span>
                            <span>•</span>
                            <span>{formatDate(post.data.publishDate)}</span>
                            {post.data.readingTime && (
                              <>
                                <span>•</span>
                                <span>{post.data.readingTime} min</span>
                              </>
                            )}
                          </div>
                          <span class="text-red-600 font-medium group-hover:underline">
                            {lang === 'es' ? 'Leer más →' : 'Read more →'}
                          </span>
                        </div>
                        {post.data.tags.length > 0 && (
                          <div class="flex flex-wrap gap-2 mt-4 pt-4 border-t border-gray-100">
                            {post.data.tags.slice(0, 3).map((tag) => (
                              <span class="text-xs text-gray-500">
                                #{tag}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </a>
                  </article>
                ))}
              </div>
            )}
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="section-padding bg-gradient-to-br from-gray-900 to-gray-800 text-white">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            {lang === 'es'
              ? '¿Listo para transformar tu gestión de talento?'
              : 'Ready to transform your talent management?'}
          </h2>
          <p class="text-xl text-gray-300 mb-8">
            {lang === 'es'
              ? 'Descubre cómo nuestras soluciones pueden impulsar tu organización.'
              : 'Discover how our solutions can boost your organization.'}
          </p>
          <a href={`/${lang}/contact`} class="btn-primary inline-block">
            {lang === 'es' ? 'Contáctanos Hoy' : 'Contact Us Today'}
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
