# Company Information
PUBLIC_COMPANY_NAME=Consultoria Integral 360 y Asociados GH S.C.
PUBLIC_COMPANY_TAGLINE=Tu socio estratégico en gestión del talento

# ==============================================
# CONTACT INFORMATION
# ==============================================

# Email
PUBLIC_CONTACT_EMAIL=contact@ghadvisor360.com

# WhatsApp (include country code without + or spaces)
# Example: 1234567890 for +1 (234) 567-890
PUBLIC_WHATSAPP_NUMBER=1234567890

# Phone Display (for footer)
PUBLIC_PHONE_DISPLAY=+1 (234) 567-890

# ==============================================
# SOCIAL MEDIA LINKS
# ==============================================

PUBLIC_FACEBOOK_URL=https://facebook.com/ghadvisor360
PUBLIC_TWITTER_URL=https://twitter.com/ghadvisor360
PUBLIC_LINKEDIN_URL=https://linkedin.com/company/ghadvisor360
PUBLIC_INSTAGRAM_URL=https://instagram.com/ghadvisor360

# ==============================================
# BUSINESS DETAILS
# ==============================================

# Address (for Schema.org structured data)
PUBLIC_BUSINESS_COUNTRY=US
PUBLIC_BUSINESS_CITY=
PUBLIC_BUSINESS_STATE=
PUBLIC_BUSINESS_ZIP=

# Business Hours (for Schema.org)
PUBLIC_BUSINESS_HOURS_OPEN=09:00
PUBLIC_BUSINESS_HOURS_CLOSE=18:00

# ==============================================
# SEO CONFIGURATION
# ==============================================

# Default Meta Description (Spanish)
PUBLIC_META_DESCRIPTION_ES=Soluciones integrales de recursos humanos: reclutamiento, selección de personal, pruebas psicométricas, estudios socioeconómicos y consultoría organizacional.

# Default Meta Description (English)
PUBLIC_META_DESCRIPTION_EN=Comprehensive human resources solutions: recruitment, personnel selection, psychometric tests, socioeconomic studies and organizational consulting.

# Default Keywords (Spanish)
PUBLIC_META_KEYWORDS_ES=reclutamiento empresas, selección personal, pruebas psicométricas, estudios socioeconómicos, pruebas polígrafo, consultoría recursos humanos, headhunting México, reclutamiento ejecutivo

# Default Keywords (English)
PUBLIC_META_KEYWORDS_EN=corporate recruitment, personnel selection, psychometric tests, socioeconomic studies, polygraph tests, HR consulting, headhunting, executive recruitment

# Open Graph Image (relative to public folder)
PUBLIC_OG_IMAGE=/og-image.jpg

# ==============================================
# EMAIL SERVICE CONFIGURATION
# ==============================================

# Choose one email service and uncomment the relevant section

# Option 1: Resend (Recommended)
# RESEND_API_KEY=your_resend_api_key

# Option 2: SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key

# Option 3: SMTP (Gmail, Outlook, etc)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# SMTP_SECURE=false

# ==============================================
# ANALYTICS & TRACKING (Optional)
# ==============================================

# Google Analytics 4
# PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager
# PUBLIC_GTM_ID=GTM-XXXXXXX

# Facebook Pixel
# PUBLIC_FB_PIXEL_ID=

# Microsoft Clarity
# PUBLIC_CLARITY_ID=

# ==============================================
# FEATURE FLAGS (Optional)
# ==============================================

# Enable/Disable WhatsApp button
PUBLIC_ENABLE_WHATSAPP=true

# Enable/Disable Contact Form
PUBLIC_ENABLE_CONTACT_FORM=true

# Enable/Disable Testimonials Section
PUBLIC_ENABLE_TESTIMONIALS=true

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================

# Environment
NODE_ENV=development

# Debug Mode
DEBUG=false
